-- Espera o jogo carregar totalmente
if not game:IsLoaded() then game.Loaded:Wait() end

local Players = game:GetService("Players")
local player = Players.LocalPlayer or Players.PlayerAdded:Wait()
local pGui = player:WaitForChild("PlayerGui")

--// Limpeza de inst√¢ncias antigas (evita bug de rodar o script v√°rias vezes)
if pGui:FindFirstChild("HubFiltrado_V3_Img") then
	pGui:FindFirstChild("HubFiltrado_V3_Img"):Destroy()
end

--// GUI Principal
local gui = Instance.new("ScreenGui")
gui.Name = "HubFiltrado_V3_Img"
gui.ResetOnSpawn = false
gui.DisplayOrder = 100 -- Fica por cima de outras GUIs do jogo
gui.Parent = pGui

--// Frame principal (O HUB)
local main = Instance.new("Frame")
main.Name = "MainFrame"
main.Parent = gui
main.Size = UDim2.new(0, 720, 0, 420)
main.Position = UDim2.new(0.5, -360, 0.5, -210)
main.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
main.Active = true
main.Draggable = true 
main.BorderSizePixel = 0
main.Visible = false -- Come√ßa invis√≠vel, abre na bolinha

Instance.new("UICorner", main).CornerRadius = UDim.new(0, 15)
local stroke = Instance.new("UIStroke", main)
stroke.Color = Color3.fromRGB(90, 40, 160)
stroke.Thickness = 2

--// Sidebar
local sidebar = Instance.new("ScrollingFrame")
sidebar.Parent = main
sidebar.Size = UDim2.new(0, 220, 1, -20)
sidebar.Position = UDim2.new(0, 10, 0, 10)
sidebar.CanvasSize = UDim2.new(0, 0, 0, 0)
sidebar.ScrollBarThickness = 4
sidebar.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
sidebar.BorderSizePixel = 0
Instance.new("UICorner", sidebar).CornerRadius = UDim.new(0, 15)

local layout = Instance.new("UIListLayout", sidebar)
layout.Padding = UDim.new(0, 6)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	sidebar.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 20)
end)

--// Conte√∫do
local content = Instance.new("Frame")
content.Parent = main
content.Position = UDim2.new(0, 240, 0, 10)
content.Size = UDim2.new(1, -250, 1, -20)
content.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
content.BorderSizePixel = 0
Instance.new("UICorner", content).CornerRadius = UDim.new(0, 15)

local tabs = {
	"üå≤99 noites", "üëΩ Steal a brainrot", "üçé Blox Fruits", "üèê Voleyball Legends",
	"‚öΩ Blue Lock", "üé≠ Forsaken", "üå¥ Grow a Garden", "üêü Fish",
	"üëä Campos de Batalha", "üõ∂ Build a Boat", "üî™ MM2", "‚õèÔ∏è The Forge",
	"üó°Ô∏è Blade Ball", "‚ò†Ô∏è Death Ball", "üè† Brookheaven RP", "üöÇ Trilhos Mortos"
}
local pages = {}

local function createSubFrame(page)
	local sf = Instance.new("ScrollingFrame")
	sf.Parent = page
	sf.Position = UDim2.new(0, 10, 0, 50)
	sf.Size = UDim2.new(1, -20, 1, -60)
	sf.CanvasSize = UDim2.new(0, 0, 0, 0)
	sf.BackgroundTransparency = 1
	sf.BorderSizePixel = 0
	sf.ScrollBarThickness = 6

	local sl = Instance.new("UIListLayout", sf)
	sl.Padding = UDim.new(0, 8)
	sl.HorizontalAlignment = Enum.HorizontalAlignment.Center

	sl:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
		sf.CanvasSize = UDim2.new(0, 0, 0, sl.AbsoluteContentSize.Y + 10)
	end)

	return function(text, callback)
		local b = Instance.new("TextButton", sf)
		b.Size = UDim2.new(1, -10, 0, 40)
		b.Text = text
		b.BackgroundColor3 = Color3.fromRGB(80, 40, 140)
		b.TextColor3 = Color3.new(1, 1, 1)
		b.Font = Enum.Font.GothamBold
		b.TextSize = 14
		b.BorderSizePixel = 0
		Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
		b.MouseButton1Click:Connect(function() pcall(callback) end)
	end
end

for i, name in ipairs(tabs) do
	local button = Instance.new("TextButton", sidebar)
	button.Size = UDim2.new(0.9, 0, 0, 35)
	button.Text = name
	button.BackgroundColor3 = Color3.fromRGB(60, 30, 100)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.Gotham
	button.TextSize = 13
	Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

	local page = Instance.new("Frame", content)
	page.Size = UDim2.new(1, 0, 1, 0)
	page.Visible = (i == 1)
	page.BackgroundTransparency = 1
	pages[name] = page

	local titleText = name
	if name == "üèê Voleyball Legends" then titleText = name .. " ‚ö†Ô∏è ALTO RISCO" end

	local title = Instance.new("TextLabel", page)
	title.Size = UDim2.new(1, 0, 0, 40)
	title.Text = titleText
	title.Font = Enum.Font.GothamBlack
	title.TextSize = 20
	title.TextColor3 = Color3.fromRGB(180, 140, 255)
	if name == "üèê Voleyball Legends" then title.TextColor3 = Color3.fromRGB(255, 50, 50) end
	title.BackgroundTransparency = 1

	local addSub = createSubFrame(page)

	-- (Mantive todas as suas abas e scripts originais aqui)
	if name == "üå≤99 noites" then addSub("Void Ware", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/VapeVoidware/VW-Add/main/nightsintheforest.lua",true))() end)
	elseif name == "üëΩ Steal a brainrot" then addSub("Lemon Hub", function() loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/c4281c3937ebd537cb9e860182e41141.lua"))() end)
	elseif name == "üçé Blox Fruits" then addSub("REDZ HUB", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/luraobermeyer-jpg/redzhub/refs/heads/main/redzhub.lua.txt"))() end)
	end -- (Adicione os outros scripts aqui se precisar, encurtei para o exemplo)
end


--// BOLA FLUTUANTE (AGORA COM IMAGEM)
-- Troquei TextButton por ImageButton
local toggleButton = Instance.new("ImageButton")
toggleButton.Name = "SFzToggleImg"
toggleButton.Parent = gui 
toggleButton.Size = UDim2.new(0, 70, 0, 70) -- Aumentei um pouco para a imagem caber melhor
toggleButton.Position = UDim2.new(0.02, 0, 0.4, 0) -- Canto esquerdo
toggleButton.BackgroundColor3 = Color3.fromRGB(30, 30, 40) -- Fundo escuro para a imagem brilhar
toggleButton.BorderSizePixel = 0
toggleButton.ZIndex = 999
toggleButton.Draggable = true 

----------------------------------------------------------------
-- ATEN√á√ÉO: TROQUE O ID ABAIXO PELO ID DA SUA IMAGEM "SFz hub"
----------------------------------------------------------------
-- Usei um ID de exemplo (um √≠cone roxo). Quando voc√™ upar sua imagem,
-- copie o n√∫mero do ID dela e cole no lugar de 7072729827.
toggleButton.Image = "rbxassetid://7072729827" 
----------------------------------------------------------------

-- Deixa a bolinha redonda
Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(1, 0)

-- Borda brilhante roxa
local strokeB = Instance.new("UIStroke", toggleButton)
strokeB.Color = Color3.fromRGB(120, 50, 255)
strokeB.Thickness = 3

-- Fun√ß√£o para abrir/fechar o menu ao clicar na imagem
toggleButton.MouseButton1Click:Connect(function()
	main.Visible = not main.Visible
	-- Opcional: Mudar a cor da borda quando clica
	if main.Visible then
		strokeB.Color = Color3.fromRGB(255, 50, 50) -- Vermelho quando aberto
	else
		strokeB.Color = Color3.fromRGB(120, 50, 255) -- Roxo quando fechado
	end
end)

print("Hub e Bolinha de Imagem carregados!")
